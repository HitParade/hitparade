{
  "repository": {
    "type": "git",
    "url": "https://github.com/hitparade/hitparade"
  },
  "scripts": {
    "clean": "rm -rf static/dist && mkdir -p static/dist/js && mkdir -p static/dist/css && mkdir -p static/dist/fonts && mkdir -p static/dist/images",
    "copy:fonts": "cp node_modules/bootstrap/fonts/* static/dist/fonts/ && cp node_modules/font-awesome/fonts/* static/dist/fonts/",
    "copy:images": "cp -r static/src/images/* static/dist/images/ 2>/dev/null || :",
    "watch:test": "onchange static/src/js/**/*.js -- npm run test",
    "watch:lint": "onchange static/src/js/**/*.js -- npm run lint",
    "watch:js": "onchange static/src/js/**/*.js -- npm run build:webpack",
    "watch:css": "onchange static/src/less/**/*.less -- npm run build:webpack",
    "build": "npm run clean && concurrently \"npm run build:webpack\" \"npm run copy:fonts\" \"npm run copy:images\"",
    "build:webpack": "./node_modules/webpack/bin/webpack.js --config webpack.config.js --progress --profile --colors",
    "watch": "concurrently --raw \"npm rebuild node-sass --force\"  \"npm run watch:lint\" \"npm run watch:js\" \"npm run watch:cssnpm \"",
    "lint": "eslint static/src/**/**/*.js",
    "test": "mocha --recursive --compilers js:babel-register static/src/tests/index.js"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.5.2",
    "react-dom": "^15.3.2",
    "react-modal": "^1.7.7",
    "react-parallax-component": "^1.0.6",
    "react-redux": "^4.4.5",
    "react-sidebar": "^2.3.2",
    "react-springy-parallax": "^1.0.11",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.3.13",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.7.7",
    "cssnano-cli": "^1.0.5",
    "envify": "^3.4.1",
    "eslint": "^3.8.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.1.2",
    "exorcist": "^0.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "jsdom": "^9.8.0",
    "jsdom-global": "^2.1.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "mocha": "^3.1.2",
    "node-sass": "^4.5.3",
    "onchange": "^3.0.2",
    "postcss-loader": "^2.0.5",
    "react-hot-loader": "^1.3.0",
    "react-modal": "^1.7.7",
    "react-parallax": "^1.4.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0",
    "webpack": "^1.15.0",
    "webpack-dev-server": "^1.16.2"
  }
}
